@model BI.Web.Models.Header

@if (Request.IsAuthenticated)
{
	<div class="navbar-form navbar-right">
		<div class="btn-group" id="loggedin_menu">
			<a class="btn btn-default" class="dropdown-toggle" data-toggle="dropdown">
				<i class="fa fa-user"></i>
				<span class="hidden-xs hidden-sm">You are Logged in as @Model.UserLogin</span> <span class="caret"></span>
			</a>
			<ul class="profile-menu dropdown-menu" role="menu">
				<li>
					<a id="logout" href="@Url.Action("Logout", "Account")">
						<i class="fa fa-fw fa-power-off"></i> Log Out
					</a>
				</li>
			</ul>
		</div>
	</div>
}